<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="48dp"
    android:gravity="center_vertical"
    android:id="@+id/ll_today_task"
    android:paddingTop="12dp"
    android:paddingBottom="12dp">
    <!--android:background="@drawable/ic_gradient_orange"-->
    <!--android:paddingLeft="12dp"-->
    <!--android:paddingRight="8dp"-->
    <ImageView
        android:id="@+id/iv_today_task_type"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:padding="6dp"
        android:background="@drawable/ic_circle_orange"
        android:src="@mipmap/ic_bell"/>

    <TextView
        android:id="@+id/tv_today_task_title"
        android:layout_width="0dp"
        android:layout_height="24dp"
        android:layout_centerVertical="true"
        android:layout_weight="1"
        android:text="单兵执法系统"
        android:textSize="14dp"
        android:layout_marginLeft="16dp"
        android:textColor="#ffffff" />

    <TextView
        android:id="@+id/tv_today_task_time"
        android:layout_width="56dp"
        android:layout_height="24dp"
        android:textSize="14dp"/>
