<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="12dp"
    android:paddingBottom="12dp"
    android:paddingLeft="16dp"
    android:background="@color/colorWhite"
    android:id="@+id/ll_to_do_task">

    <ImageView
        android:id="@+id/iv_to_do_task_pic"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/ic_circle_red"
        android:padding="10dp"
        android:src="@mipmap/ic_bell" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="16dp"
        >

        <TextView
            android:id="@+id/tv_to_do_task_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="待完成任务"
            android:textSize="14dp"
            android:textColor="@color/colorFont1"/>
        <TextView
            android:id="@+id/tv_to_do_task_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="历史任务"
            android:layout_marginTop="8dp"
            android:textSize="10dp"
            android:textColor="@color/colorFont2"
            />
        <View
            android:layout_height="1px"
            android:background="#E3E4E6"
            android:layout_marginTop="15dp"
            android:layout_width="fill_parent"/>
        <TextView
            android:id="@+id/tv_to_do_task_content"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:text="历史任务"
            android:layout_marginTop="8dp"
            android:textSize="10dp"
            android:textColor="@color/colorFont2"
            />

    </LinearLayout>

</LinearLayout>