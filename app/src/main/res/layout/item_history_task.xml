<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="88dp"
    android:orientation="vertical"
    android:paddingLeft="16dp">
    <TextView
        android:id="@+id/tv_history_task_month"
        android:layout_width="match_parent"
        android:layout_height="24dp"
        android:text="xxxxxxxxxx"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:paddingTop="12dp"
        android:paddingBottom="12dp">
        <ImageView
            android:id="@+id/iv_history_task_type_pic"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/ic_circle"
            android:padding="10dp"
            android:src="@mipmap/ic_bell" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="56dp"
            >

            <TextView
                android:id="@+id/tv_history_task_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="历史任务"
                android:textSize="14dp"
                android:textColor="@color/colorFont1"
                />
            <TextView
                android:id="@+id/tv_history_task_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="历史任务"
                android:layout_marginTop="8dp"
                android:textSize="10dp"
                android:textColor="@color/colorFont2"
                />
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>