<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp">
    <include layout="@layout/layout_title"
    android:visibility="gone"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@mipmap/ic_service"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48dp">
            <TextView
                android:id="@+id/tv_login_name"
                android:layout_width="48dp"
                android:layout_height="wrap_content"
                android:text="@string/login_name"
                android:textSize="14dp"
                android:layout_gravity="center_vertical"/>
            <EditText
                android:id="@+id/et_login_name"
                android:layout_width="0dp"
                android:textSize="14dp"
                android:textCursorDrawable="@drawable/ic_color_cursor"
                android:background="@drawable/line_et_bg"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:inputType="text"
                android:lines="1"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48dp">
            <TextView
                android:id="@+id/tv_login_pass"
                android:layout_width="48dp"
                android:layout_height="wrap_content"
                android:textSize="14dp"
                android:text="@string/login_pass" />
            <EditText
                android:id="@+id/et_login_pass"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@drawable/line_et_bg"
                android:layout_weight="1"
                android:textSize="14dp"
                android:inputType="textPassword"
                android:lines="1"/>
        </LinearLayout>
        <TextView
            android:id="@+id/tv_login_error"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="用户名或者密码错误"
            android:gravity="center"
            android:textColor="@color/red"
            android:visibility="invisible"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">
        <Button
            android:id="@+id/btn_login"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:text="@string/login"
            android:textColor="@color/colorWhite"
            android:background="@color/colorSkyBlue"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:textSize="24sp"
            android:gravity="center"
            android:text="@string/system_name"/>


    </LinearLayout>


</LinearLayout>

